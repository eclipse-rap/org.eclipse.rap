<theme>

  <element name="CTabFolder">

    <description>
    RWT CTabFolder widgets.
    This widget is used to arrange views in the Workbench default presentation.
    </description>
    
    <property name="border-color"
          type="color"
          description="CTabFolder border color." />

    <element name="CTabItem"
        description="Items of a CTabFolder control.">

      <property name="color"
          type="color"
          description="Text color for the item tabs." />

      <property name="background-color"
          type="color"
          description="Background color for the item tabs." />

      <state name="selected"
          description="Applies to the selected item." />

    </element>

  </element>


  <!-- C O M P A T I B I L I T Y

    The following section is needed to maintain the deprecated property-based
    theming.

    -->

  <color name="ctabfolder.background"
      description="Background color for CTabFolders"
      transparentAllowed="true"
      default="248, 248, 255"
      css-elements="CTabItem"
      css-property="background-color" />

  <color name="ctabfolder.foreground"
      description="Foreground color for CTabFolders"
      default="black"
      css-elements="CTabItem"
      css-property="color" />

  <color name="ctabfolder.selection.background"
      description="Background color for selected items in CTabFolders"
      default="217, 227, 243"
      css-elements="CTabItem"
      css-property="background-color"
      css-selectors=":selected" />

  <color name="ctabfolder.selection.foreground"
      description="Foreground color for selected items in CTabFolders"
      default="black"
      css-elements="CTabItem"
      css-property="color"
      css-selectors=":selected" />

</theme>
