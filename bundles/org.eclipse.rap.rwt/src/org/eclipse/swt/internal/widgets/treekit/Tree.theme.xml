<!-- Themeable properties for SWT Tree widget -->

<theme>

  <!-- C S S   T H E M I N G

    The following section is needed to support the new CSS-based theming.
    It describes the elements this widget adds to the virtual element
    tree which the CSS rules relate to.
    Please note that the syntax is considered preliminary and is still subject
    to change. Also note that this section is not interpreted as long as RAP
    uses the old property-based system internally. We publish it here anyway
    to introduce the new syntax to interested developers soon.

    -->

  <element name="Tree">

    <element name="TreeColumn"
        description="Column header of Tree controls">

      <property name="background-color"
          type="color"
          description="Background color for tree column headers" />

      <state name="hover"
          description="Mouse over state" />

      <element name="TreeColumn-SortIndicator"
          description="Sort indicators in Tree column headers">

        <property name="background-image"
            type="image"
            description="Indicator image for tree sorting (up/down)" />

        <state name="up"
            description="On sorting up" />

        <state name="down"
            description="On sorting down" />

      </element>

    </element>

  </element>

  <!-- C O M P A T I B I L I T Y

    The following section is needed to maintain the deprecated property-based
    theming.

    -->

  <color name="tree.column.background"
      description="Background color for tree column headers"
      default="248, 248, 255"
      css-elements="TreeColumn"
      css-property="background-color"
      />

  <color name="tree.column.hover.background"
      description="Background color for tree column headers on mouse over"
      default="248, 248, 255"
      css-elements="TreeColumn"
      css-property="background-color"
      css-selectors=":hover"
      />

  <image name="tree.column.sort.up"
      description="Indicator image for tree sorting (up)"
      default="resource/widget/rap/column/up.gif"
      css-elements="TreeColumn-SortIndicator"
      css-property="background-image"
      css-selectors=":up"
      />

  <image name="tree.column.sort.down"
      description="Indicator image for tree sorting (down)"
      default="resource/widget/rap/column/down.gif"
      css-elements="TreeColumn-SortIndicator"
      css-property="background-image"
      css-selectors=":down"
      />

</theme>
