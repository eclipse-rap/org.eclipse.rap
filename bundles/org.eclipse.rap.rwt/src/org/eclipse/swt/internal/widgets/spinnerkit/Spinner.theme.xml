<theme>

  <element name="Spinner">

    <property name="color"
        type="color"
        description="Spinner foreground color" />

    <property name="background-color"
        type="color"
        description="Spinner background color" />

     <property name="font"
        type="font"
        description="Text font" />

    <property name="border"
        type="border"
        description="Border for spinner text fields." />

    <property name="padding"
        type="boxdim"
        description="Padding for spinner text fields." />

    <style name="BORDER"
        description="Style constant for bordered behavior." />

    <state name="disabled"
        description="Applies to disabled Spinner controls." />

    <element name="Spinner-UpButton"
        description="The spinner up button">

      <property name="background-image" type="image">
        <description>
          Background image for the Spinner up button.
          The size of the image should be 12 x 5 pixels.
        </description>
      </property>
      
      <property name="background-color" type="color">
        <description>
          The background color of the Spinner up button.
        </description>
      </property> 

      <property name="border" type="border">
        <description>
          The border of the Spinner up button.
        </description>
      </property>
          
      <state name="pressed"
          description="Applies while a button is pressed." />

    </element>

    <element name="Spinner-DownButton"
        description="The spinner down button">

      <property name="background-image" type="image">
        <description>
          Background image for the Spinner down button.
          The size of the image should be 12 x 5 pixels.
        </description>
      </property>
      
      <property name="background-color" type="color">
        <description>
          The background color of the Spinner down button.
        </description>
      </property> 

      <property name="border" type="border">
        <description>
          The border of the Spinner down button.
        </description>
      </property>
          
      <state name="pressed"
          description="Applies while a button is pressed." />

    </element>

  </element>

</theme>