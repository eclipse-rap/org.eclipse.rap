<theme>

  <element name="Scale"
      description="Scale controls">

    <property name="background-color"
        type="color"
        description="Background color for scale" />

    <property name="border"
        type="border"
        description="Scale border" />
        
    <property name="border-radius" type="boxdim">
        <description>
          Border radius. The border radius has no effect if an enhanced border,
          like "inset" or "outset" is used.
        </description>
    </property>

    <style name="BORDER"
        description="Style constant for bordered behavior." />

    <state name="disabled"
        description="Applies to disabled Scale controls." />

    <element name="Scale-Thumb"
        description="The movable knob on a Scale control.">

      <property name="background-color"
          type="color"
          description="Background color for scale thumb." />

      <state name="disabled"
          description="Applies to the thumb of a disabled Scale control." />

    </element>

  </element>

</theme>