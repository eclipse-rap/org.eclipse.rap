<theme css-elements="List">

  <element name="List"
      description="SWT Lists.">

    <property name="font"
        type="font"
        description="Font for lists." />

    <property name="color"
        type="color"
        description="Text color lists." />

    <property name="background-color"
        type="color"
        description="Background color for lists." />

    <property name="border"
        type="border"
        description="Border for lists." />

    <style name="BORDER"
        description="Indicates that the list should have a border." />

    <element name="List-Item"
        description="Items of list controls.">

      <property name="color"
          type="color"
          description="Text color for list items." />

      <property name="background-color"
          type="color"
          description="Background color for list items." />

      <state name="selected"
          description="Applies to selected items." />

      <state name="inactive"
          description="Applies to items on unfocused lists." />

    </element>

  </element>


  <!-- C O M P A T I B I L I T Y

    The following section is needed to maintain the deprecated property-based
    theming.

    -->

  <color name="list.background"
      description="Background color for List, also applies to Text, Combo, Tree, Table, etc."
      default="255, 255, 255"
      css-elements="List Text Combo Tree Table Spinner"
      css-property="background-color" />

  <color name="list.foreground"
      description="Text color for List, also applies to Text, Combo, Tree, Table, etc."
      default="0, 0, 0"
      css-elements="List Text Combo Tree Table Spinner"
      css-property="color" />

  <color name="list.selection.background"
      description="Background color selected List items, also applies to Tree and Table"
      default="49, 106, 197"
      css-elements="List-Item TreeItem TableItem"
      css-property="background-color"
      css-selectors=":selected" />

  <color name="list.selection.foreground"
      description="Text color for selected List items, also applies to Tree and Table"
      default="255, 255, 255"
      css-elements="List-Item TreeItem TableItem"
      css-property="color"
      css-selectors=":selected" />

</theme>
