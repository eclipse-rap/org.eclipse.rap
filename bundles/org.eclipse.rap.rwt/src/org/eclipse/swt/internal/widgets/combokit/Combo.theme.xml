<theme css-elements="Combo">
  
  <element name="Combo">
    <description>
      RWT Combo widget.
    </description>
    
    <property name="border"
        type="border"
        description="Border for combos." />
        
  </element>

  <element name="Combo-Button">
    <description>
      The drop-down button of RWT Combo.
    </description>
    
    <property name="background-image" type="image">
      <description>
        The icon for the Combo drop-down button.
        The size of the image should be 12 x 12 pixels.
      </description>
    </property> 
    
  </element>  

</theme>
