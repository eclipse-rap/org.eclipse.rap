<!-- Themeable properties for SWT Table -->

<theme
    css-elements="Table">

  <!-- C S S   T H E M I N G

    The following section is needed to support the new CSS-based theming.
    It describes the elements this widget adds to the virtual element
    tree which the CSS rules relate to.
    Please note that the syntax is considered preliminary and is still subject
    to change. Also note that this section is not interpreted as long as RAP
    uses the old property-based system internally. We publish it here anyway
    to introduce the new syntax to interested developers soon.

    -->

  <element name="Table">

      <property name="color"
          type="color"
          description="Text color for tables." />

      <property name="background-color"
          type="color"
          description="Background color for tables." />

    <element name="TableColumn"
        description="Column header of Table controls">

      <property name="background-color"
          type="color"
          description="Background color for table column headers" />

      <state name="hover"
          description="On mouse over" />

      <state name="disabled"
          description="Reflects Table#setEnabled()" />

      <element name="TableColumn-SortIndicator"
          description="Sort indicators in Table column headers">

        <property name="background-image"
            type="image"
            description="Indicator image for table sorting (up/down)" />

        <state name="up"
            description="On sorting up" />

        <state name="down"
            description="On sorting down" />

      </element>

      <element name="Table-GridLine"
          description="Grid lines in Table controls">

        <property name="color"
            type="color"
            description="Grid line color when linesVisible is true" />

      </element>

      <element name="Table-Checkbox"
          description="Checkboxes in Table controls">

        <property name="width"
            type="dimension"
            description="Width of check boxes" />

      </element>

    </element>

  </element>

  <!-- C O M P A T I B I L I T Y

    The following section is needed to maintain the deprecated property-based
    theming.

    -->
  
  <color name="table.column.background"
      description="Background color for table column headers"
      default="248, 248, 255"
      css-elements="TableColumn"
      css-property="background-color"
      />

  <color name="table.column.hover.background"
      description="Background color for table column headers on mouse over"
      default="248, 248, 255"
      css-elements="TableColumn"
      css-property="background-color"
      css-selectors=":hover"
      />

  <image name="table.column.sort.up"
      description="Indicator image for table sorting (up)"
      default="resource/widget/rap/column/up.gif"
      css-elements="TableColumn-SortIndicator"
      css-property="background-image"
      css-selectors=":up"
      />

  <image name="table.column.sort.down"
      description="Indicator image for table sorting (down)"
      default="resource/widget/rap/column/down.gif"
      css-elements="TableColumn-SortIndicator"
      css-property="background-image"
      css-selectors=":down"
      />

  <color name="table.row.line"
      description="Grid line color when linesVisible is true"
      default="238, 238, 238"
      css-elements="Table-Gridline"
      css-property="color"
      />

  <!-- C h e c k b o x -->

  <dimension name="table.checkbox.width"
      description="Width of check boxes"
      default="21"
      css-elements="Table-Checkbox"
      css-property="width"
      />

</theme>
