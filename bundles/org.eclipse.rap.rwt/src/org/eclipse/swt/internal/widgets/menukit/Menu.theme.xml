<!-- Themeable properties for SWT Menu -->

<theme
   css-elements="Menu">


  <!-- C S S   T H E M I N G

    The following section is needed to support the new CSS-based theming.
    It describes the elements this widget adds to the virtual element
    tree which the CSS rules relate to.
    Please note that the syntax is considered preliminary and is still subject
    to change. Also note that this section is not interpreted as long as RAP
    uses the old property-based system internally. We publish it here anyway
    to introduce the new syntax to interested developers soon.

    -->

  <element name="Menu"
      description="Menus">

    <property name="color"/>

    <property name="background-color"/>

    <property name="border"/>

    <property name="padding"/>

  </element>

  <element name="MenuItem"
      description="Menu items">

    <property name="color"
        states="hover"/>

    <property name="background-color"
        states="hover"/>

  </element>

  <!-- C O M P A T I B I L I T Y

    The following section is needed to maintain the deprecated property-based
    theming.

    -->

  <color name="menu.foreground"
      description="Text color for menu items"
      default="0, 0, 0"
      css-elements="Menu MenuItem"
      css-property="color"
      />

  <color name="menu.hover.foreground"
      description="Text for menu items on mouse over"
      default="255, 255, 255"
      css-elements="MenuItem"
      css-property="color"
      css-selectors=":hover"
      />
  
  <!-- == control.background -->
  <color name="menu.background"
      description="Background color for menus"
      default="248, 248, 255"
      css-elements="Menu MenuItem"
      css-property="background-color"
      />

  <!-- == list.focused.background -->
  <color name="menu.hover.background"
      description="Background color for menus on mouse over"
      default="49, 106, 197"
      css-elements="MenuItem"
      css-property="background-color"
      css-selectors=":hover"
      />

  <border name="menu.border"
      description="Border for menus"
      default="2px outset"
      css-property="border"
      />

  <boxdim name="menu.padding"
      description="Padding for menus"
      default="1px"
      css-property="padding"
      />

</theme>
