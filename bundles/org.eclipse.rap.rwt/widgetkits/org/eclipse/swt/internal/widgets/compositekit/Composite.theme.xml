<theme>

  <element name="Composite">
    <description>
      The theming of RWT Composite.
    </description>

    <property name="border">
      <description>
        The border that is drawn around the composite.
      </description>
    </property>

    <property name="border-radius">
      <description>
        Border radius. The border radius has no effect if an enhanced border,
        like "inset" or "outset" is used.
      </description>
    </property>

    <property name="background-color">
      <description>
        The background color for composites.
      </description>
    </property>

    <property name="background-image">
      <description>
        Background image or gradient for composites.
      </description>
    </property>
    
    <property name="padding">
      <description>
        Padding (inner distance) for composites.
      </description>
    </property>

    <property name="opacity" 
        description="The opacity of the composite. A value between 0 and 1." />

    <property name="box-shadow" 
        description="The shadow behind the composite." />

    <style name="BORDER"
        description="Style constant for bordered behavior." />
        
    <state name="hover"
        description="Applies while the user hovers over a composite." />

  </element>

</theme>
